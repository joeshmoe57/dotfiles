# Rewrite a few aliases because Mac is dumb.
alias ls='ls -hFG'
alias lr='ls -R'                    # recursive ls
alias ll='ls -l'
alias la='ll -A'
alias lx='ll -BX'                   # sort by extension
alias lz='ll -rS'                   # sort by size
alias lt='ll -rt'                   # sort by date
alias lm='la | more'

# cd and ls in one--must redefine for mac since it relies on ls
cl() {
   if [ -d "$1" ]; then
      cd "$1"
         ls
   else
      echo "bash: cl: '$1': Directory not found"
         fi
}
# Mac uses a enviroment variable to color ls output.
export CLICOLOR=1

# grab the local version of the Javascript interpreter
alias jsc='/System/Library/Frameworks/JavaScriptCore.framework/Versions/Current/Resources/jsc'
alias heddle_prod="cd ~/Electroloom/development/heddle_project/prod/heddle;python3 heddle.py"
alias heddle="cd ~/Electroloom/development/heddle_project/heddle"
alias shuttle="cd ~/Electroloom/development/shuttle_project/shuttle"
alias shed="cd ~/Electroloom/development/shed_project/shed"

# Source bash completion from homebrew.
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
fi
